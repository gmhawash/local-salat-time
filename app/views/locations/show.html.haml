%div{"data-role" => "page", "data-theme" => "a", 'data-title' => 'Mobile Salat App'}
  %div{"data-position" => "inline", "data-role" => "header", 'data-theme' => 'b'}
    %h1 #{@location.name}
  %div{'data-role'=>'collapsible-set', "data-theme" => "a"}
    %div{"data" => {"role" => "collapsible", "theme" => "a", "collapsed"=>"false"} }
      %h3 #{@salat.date.strftime("%A %b %d, %Y")}
      %p
        - if @salat
          %div.ui-body.ui-body-d.ui-corner-all
            %table.table-stroke.ui-responsive{:data => {:role => 'table', :mode=>'fixed'}}
              %thead
                %tr.ui-bar-a
                  %th
                  %th Athan
                  %th Iqama

              %tbody
              - [:fajr, :dhuhr, :asr, :maghrib, :isha].each do |time|
                %tr
                  %td.label=t(time)
                  %td= @salat.times["#{time}_athan"]
                  %td= @salat.times["#{time}_iqama"]
        -else
          = t('not_available')
        %h3.center{:style => 'text-align:center; color: red'} Eid Al-Adha is on Oct 15th, 2013

    %div{"data-role" => "collapsible", "data-theme" => "a"}
      = render :partial => 'month'



